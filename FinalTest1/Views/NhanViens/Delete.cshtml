    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Delete" id="btnXoa" data-id="@Model.Manv" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
        <h3 id="msg" class="text-danger"></h3>
    }

    @section Scripts{
        <script type="text/javascript">
        $(function () {
            $("#btnXoa").click(function () {
                var id = $(this).data("id");

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteConfirmed", "NhanViens")',
                    dataType: "json",
                    data: '{id:' + JSON.stringify(id) + '}',
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.result) {
                            $("#msg").text("Xoa Thanh Cong");
                        }
                        else {
                            $("#msg").text("Xoa Khong thanh Cong");
                        }
                    },
                    error: function (response) {
                        $("#msg").text("Xoa  Bi Loi");
                    }
                })

            })
        })
        </script>
    }

